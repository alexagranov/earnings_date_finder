<%= content_for :ready do %>
    $(function() {
      $("#from_date").datepicker();
      $("#to_date").datepicker();
    });
<% end %>

<h1>Listing earnings</h1>

<%= form_tag(import_earnings_path, :confirm=> 'Are you sure you would like to import earnings?') do %>
  <%= text_field_tag 'from_date', nil, :placeholder => 'From Date', :id => 'from_date' %>
  <%= text_field_tag 'to_date', nil, :placeholder => 'To Date', :id => 'to_date' %>
  <div><%= submit_tag 'Import' %></div>
<% end %>

<table>
  <tr class='header-row'>
    <th>Name</th>
    <th>Cusip</th>
    <th>Earnings Date</th>
    <th>Estimate</th>
    <th>At time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @earnings.each do |earning| %>
  <tr>
    <td><%= earning.name %></td>
    <td><%= earning.cusip %></td>
    <td class='centered'><%= earning.released_at.strftime('%m-%d-%Y') %></td>
    <td><%= earning.estimate %></td>
    <td class='centered'><%= earning.at_time %></td>
    <td><%= link_to 'Show', earning %></td>
    <td><%= link_to 'Edit', edit_earning_path(earning) %></td>
    <td><%= link_to 'Destroy', earning, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

